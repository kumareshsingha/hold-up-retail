// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  roleId     String
  role       Role     @relation(fields: [roleId], references: [id])
  sellerId   String?
  seller     Seller?  @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique // Super Admin, Seller
  permissions String   // JSON array of permission strings
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Seller {
  id          String   @id @default(cuid())
  name        String   @unique // Business Name
  contactInfo String?
  status      String   @default("ACTIVE") // ACTIVE, INACTIVE
  users       User[]
  products    Product[]
  transactions Transaction[]
  customers   Customer[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id            String   @id @default(cuid())
  name          String
  sku           String   @unique
  imageUrl      String?
  category      String
  costPrice     Float
  sellingPrice  Float
  stock         Int      @default(0)
  status        String   @default("PENDING") // PENDING, APPROVED, REJECTED
  
  sellerId      String
  seller        Seller   @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  
  transactions  TransactionItem[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Transaction {
  id            String   @id @default(cuid())
  invoiceNumber String   @unique // Keep this unique, or make it unique per seller if needed, but unique globally is safer.
  totalAmount   Float
  taxAmount     Float    @default(0)
  discount      Float    @default(0)
  paymentMethod String   // Cash, UPI, Card, Split
  status        String   // COMPLETED, REFUNDED, PENDING
  source        String   // POS, ONLINE
  
  sellerId      String
  seller        Seller   @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  
  customerId    String?
  customer      Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  
  items         TransactionItem[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TransactionItem {
  id            String   @id @default(cuid())
  transactionId String
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  productId     String
  product       Product     @relation(fields: [productId], references: [id])
  quantity      Int
  price         Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Customer {
  id            String   @id @default(cuid())
  name          String
  phone         String?  
  email         String?  
  loyaltyPoints Int      @default(0)
  
  sellerId      String
  seller        Seller   @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  
  transactions  Transaction[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([phone, sellerId])
  @@unique([email, sellerId])
}
